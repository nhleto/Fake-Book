<% if !post.comments.nil? %>
  <% post.comments.each do |comment| %>
    <div class="media">
      <div class="media-content">
        <p>
          <%= image_tag user_avatar(comment.user, 20), style:'border-radius:50%; margin-top:auto; margin-bottom:auto;' %>
          <small style='margin-top:auto; margin-bottom:auto'>Posted by <u><%= link_to comment.user.name, user_path(comment.user) %></u> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</small>
        </p>
        <p><%= comment.body %></p>
      </div>
    </div>
  <% end %>
<% end %>