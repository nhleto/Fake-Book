<% if comment.has_children? %>
  <% comment.subtree_ids.sort.each do |c| %>
    <% comment = has_descendants(c) %>
    <% next if !comment.ancestry? %>
    <div class="media">
    <div class="media-content" style='overflow-wrap:anywhere;'>
      <p style='display:flex'>
        <%= image_tag user_avatar(comment.user, 20), id: 'comment-gravatar' %>
        <small>Posted by <u><%= link_to comment.user.name, user_path(comment.user) %></u> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</small>
      </p>
      <p><%= comment.body %></p>
      <div style='display:flex;justify-content:space-between'>
        <small>Reply to <%= comment.parent.body.split[0] if comment.parent %> ...</small>
        <span>
        
        </span>
        <span style='display:flex'>
          <% if comment.user == current_user %>
            <%= link_to comment, method: :delete do %>
              <i class='fa fa-trash-o' aria-hidden='true'></i>
            <% end %>
          <span style='position:relative;bottom:2px'>&#8287:&#8287:&#8287</span>
          <% end %>
          <i class="fa fa-reply accordion1 mb-3" aria-hidden='true' style='cursor:pointer;position:relative;bottom:-5px;'></i>
        </span>
      </div>
      <div class="panel4">
        <%= render 'nested_comment', comment: comment %>
      </div>
    </div>
  </div>
  <% end %>
<% end %>