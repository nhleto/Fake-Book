<div class="box has-text-centered" style='padding-top:0px'>
  <div class="content mt-0">
    <button class="button accordion is-primary is-light mt-5">+ Create a New Group</button>
    <div class="panel group-form" style='position:relative'>
      <%= render "/shared/groups_form" %>
    </div>
  </div>
  <% if @groups.any? %>
    <% @groups.each do |group| %>
      <p class='has-text-centered' id='group-name-content'>
        <%= link_to group.name, group_path(group), data: { turbolinks: "false" }, id: 'group-name-link' %>
      </p>
    <% end %>
  <% end %>
</div>