<div class="suggestion-card">
  <%= image_tag 'groups-placeholder.png', style: 'border-radius:10px 10px 0 0' %>
  <div class="container center like-underline" style='overflow-y:hidden;word-break:break-word;'>
    <%= link_to group.name, group %>
  </div>
  <div class="content ml-2" style='display:flex'>
    <%= image_tag "https://static.xx.fbcdn.net/rsrc.php/v3/yB/r/rtgCzSCUnWc.png", size: '20' %>&#8287
    <%= group.users.size %><%= group.users.size > 1 ? ' members in this group' : ' member in this group' %>
  </div>
  <div class="content">
    <%= button_to  "Join Group", group_memberships_path(group, current_user), 
        class: 'button is-primary is-light is-outlined join-group', style:'width:85%;display:flex;margin:auto' %>
  </div>
</div>