<div class="suggestion-card">
  <div class="group-suggestion-wrapper">
    <%= image_tag(group.thumbnail, alt: 'group-picture', id: 'group-suggestion-image') %>
  </div>
  <div class="center like-underline" style='overflow-y:hidden;word-break:break-word;'>
    <%= link_to group do %>
      <h5 class="title is-5 mt-3" style='height:25px;'><%= group.name %></h5>
    <% end %>
  </div>
  <div class="content ml-2 mt-2 mb-2" style='display:flex'>
    <%= image_tag "https://static.xx.fbcdn.net/rsrc.php/v3/yB/r/rtgCzSCUnWc.png", size: '20' %>&#8287
    <%= group.users.size %><%= pluralize(group.users, 'member') %> in this group
  </div>
  <div class="content" id="button-<%= group.id %>">
    <%= button_to  "Join Group", group_memberships_path([group, current_user]), remote: true,
        class: 'button is-primary is-light is-outlined join-group', style:'width:85%;display:flex;margin:auto' %>
  </div>
</div>