<div class="box">
  <span style='display:flex;justify-content:center;align-items:center'>
    <%= image_tag user_avatar(@user, 100), style: 'border-radius:50%' %>
  </span>

  <div class="user-pro-bio mb-3">
    <h5 class="title is-5 mb-2"><%= @user.name.split[0] %>'s bio</h5>
    <p class='mb-4'><%= @user.bio %></p>
    <% if @user == current_user && !@user.bio.nil? %>
      <% if @user == current_user && @user.bio != "" %>
        <span class='mt-3 mb-3 accordion like-underline'>
          <b>Edit bio</b>
        </span>
        <%= render  "bio" %>
      <% end %>
    <% end %>
  </div>

  <% if @user == current_user && @user.bio.nil? || @user == current_user && @user.bio == '' %>
    <span class='center mt-3 mb-3 accordion like-underline'>
      <b>Add bio</b>
    </span>
    <%= render 'bio' %>
  <% end %>

  <div class="field">
    <div class="control">
      <span><b>Name: </b></span><%= @user.name %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <span><b>Email: </b></span><%= @user.email %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <span><b>Birthday: </b></span><%= @user.date_of_birth %>
    </div>
  </div>

  <span>
    <% if @user == current_user %>
      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Back', posts_path %>
    <% end %>
  </span>
</div>