<div class="section">
  <% if @user.date_of_birth.nil? %>
    <div class="container mt-0 mb-3" id='odin-test'>
      <div class="notification is-danger is-light">
        <p class="notice">
          Please provide a date of birth for your profile
          <button class="delete" id='flash'></button>
        </p>
      </div>
    </div>
  <% end %>
  <div class="columns is-centered">
    <div class="column is-one-quarter">
      <div class="box">
        <h4 class="title is-4 has-text-centered">About</h4>
      </div>      
    </div>
    <div class="column is-one-quarter">
      <div class="box">
        <h4 class="title is-4 has-text-centered">Profile</h4>
      </div>
    </div>
    <div class="column is-one-quarter">
      <div class="box">
        <h4 class="title is-4 has-text-centered"><%= @user.active_friends.size %><%= pluralize(@user.active_friends, 'Friend') %></h4>
      </div>
    </div>
  </div>
  <div class="columns is-centered">
    <div class="column is-one-quarter">
      <div class="box">
        <h5 class="title is-5 mb-2"><%= @user.name.split[0] %>'s bio</h5>
        <p class='mb-4'><%= @user.bio %></p>
        <% if @user == current_user && !@user.bio.nil? %>
          <span class='mt-3 mb-3 accordion like-underline'>
            <b>Edit bio</b>
          </span>
          <%= render  "bio" %>
        <% end %>
      </div>
    </div>
    <div class="column is-one-quarter">
      <% if @user != current_user && !@user.pending_friends.include?(current_user) && !current_user.friends.include?(@user) %>
        <%= button_to 'Add Friend', friendships_path(friendships: { user_id: current_user.id, friend_id: @user.id }) %>
      <% end %>
      <%= render 'profile_info' %>
    </div>
    <div class="column is-one-quarter">
      <button class="button is-info is-light accordion" style='width:100%'>Friends</button>
      <%= render 'shared/people_card', post: @friends %>
      <% if @user == current_user %>
        <button class="button is-warning is-light accordion" style='width:100%'>Friend Requests</button>
        <%= render 'shared/people_card', post: @friendships %>
      <% end %>
    </div>
  </div>
</div>