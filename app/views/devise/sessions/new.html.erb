<div class="section">
  <h2 class="title is-2 has-text-centered" style='color:#22223b'><u>Sign In</u></h2>
  <div class="columns is-centered">
    <div class="box" style='width:500px'>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <div class="control">
          <%= f.input :email,
                    wrapper: false,
                    label_html: { class: 'label' },
                    input_html: { class: 'input' } %>
        </div>
      </div> 

      <div class="field">
        <div class="control">
          <%= f.input :password,
                    wrapper: false,
                    label_html: { class: 'label' },
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { class: 'input' } %>
        </div>
      </div>
      
      <%= render 'devise/shared/sign-in-links' %>

      <%= f.button :submit, "Sign in", class:'button mb-5 sign-in-button' %>

      <span class='center mb-5 text-divider' style='color:rgba(74,74,74,0.3);'>
        <small style='padding:0 20px 0 20px'>OR</small>
      </span>

      <div class="field">
        <%= render "devise/shared/links" %>
      </div>

      <% end %>
    </div>
  </div>
</div>