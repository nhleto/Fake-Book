<div class="section">
  <h2 class="title is-2 has-text-centered">Resend unlock instructions</h2>
  <div class="columns is-centered">
    <div class="box" style='width:500px'>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

      <div class="field">
        <div class="control">
          <%= f.input :email,
                    wrapper: false,
                    label_html: { class: 'label' },
                    input_html: { class: 'input' } %>
        </div>
      </div>

      <%= f.button :submit, "Resend unlock instructions", class:'button mb-5 sign-in-button' %>
      
      <span class='center mb-5 text-divider' style='color:rgba(74,74,74,0.3);'>
        <small style='padding:0 20px 0 20px'>OR</small>
      </span>

      <% end %>
      <%= render "devise/shared/links" %>
      
    </div>
  </div>
</div>

