<!DOCTYPE html>
<html style='background-color:#c9ada7'>

<head>
  <title>FakeBook</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <nav class="navbar">
    <div class="navbar-brand">
      <div class="navbar-item">
        <h2 class="title is-2" style='color:#4a4e69'>FakeBook</h2>
      </div>
      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" style='color:white'>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div class="navbar-menu">
      <div class="navbar-start"></div>
      <div class="navbar-end">
        <% if user_signed_in? %>
        <div class="navbar-item has-dropdown is-hoverable">
          <div class="navbar-link">
            <h4 class="title is-4" style='color:#4a4e69'><%= current_user.name %></h4>
          </div>
          <div class="navbar-dropdown">
            <div href="" class="navbar-item">
              <h5 class="title is-5"><%= link_to 'Home', posts_path %></h5>
            </div>
            <div class="navbar-item">
              <h5 class="title is-5"><%= link_to 'Profile', user_path(@user) %></h5>
            </div>
            <div class="navbar-divider"></div>
            <div href="" class="navbar-item">
              <h5 class="button is-primary is-light" style='border:1px solid'><%= link_to 'Logout', destroy_user_session_path, method: :delete %></h5>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <% if flash[:notice] %>
  <div class="container" id='odin-test'>
    <div class="notification is-primary is-light">
      <p class="notice">
        <%= notice %>
        <button class="delete" id='flash'></button>
      </p>
    </div>
  </div>
  <% end %>

  <% if flash[:alert] %>
  <div class="container" id='odin-test'>
    <div class="notification is-danger is-light">
      <p class="notice">
        <%= alert %>
        <button class="delete" id='flash'></button>
      </p>
    </div>
  </div>
  <% end %>


  <%= yield %>
</body>

</html>